<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/gap_line_double"
    android:layout_marginTop="@dimen/gap_vertical"
    android:background="@drawable/round_white_10"
    android:orientation="vertical"
    android:padding="@dimen/gap_line_double">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_review_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_20"
            tools:text="사용자1" />

        <RatingBar
            android:id="@+id/rb_item_review_rating"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/main_color_bright"
            android:progressTint="@color/main_color"
            tools:rating="4" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_line"
        tools:text="AAA음식집에 다녀왔어요. 맛있네요" />

</LinearLayout>