<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.deliciousfood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeliciousFood"
        tools:targetApi="31">
        <activity
            android:name=".pages.MyReviewActivity"
            android:exported="false" />
        <activity
            android:name=".pages.RestaurantEditActivity"
            android:exported="false" />
        <activity
            android:name=".pages.session.MyPageActivity"
            android:exported="false" />
        <activity
            android:name=".utils.PopupActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".pages.RestaurantAddActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".pages.RestaurantActivity"
            android:exported="false" />
        <activity
            android:name=".utils.ParentActivity"
            android:exported="false" />
        <activity
            android:name=".pages.session.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".pages.session.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.MainActivity"
            android:exported="true" />
    </application>

</manifest>